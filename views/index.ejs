<% include partials/header.ejs %>

  <body>
    <div class="container">
    <% for(let i = 0; i < data.length; i++) {%>
      <div>
      <a href ="/post/<%= data[i].id %>">
      <img src="/client/images/<%= data[i].image_url %>">
    </a>
      <h3><%= data[i].caption %></h3>
      <a href="/post/<%=data[i].id%>/edit">
        <button>Edit</button>
      </a>
      <form method="POST" action="/post/<%=data[i].id%>?_method=DELETE">
        <button type="submit">Delete</button>
      </form>
    </div>
    <% } %>
  </div>
  </body>
</html>
